{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "src",
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "noErrorTruncation": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/setupTests.ts"
  ]
}